<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.NewPage2"
             Title="NewPage2"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout
        Spacing="50"
        Padding="50">
        <Frame Margin="0,250,0,0" HeightRequest="100" WidthRequest="200" BorderColor="Black" BackgroundColor="Transparent" CornerRadius="40">
            <Entry x:Name="entryUserName" TextColor="Black" Placeholder="User Name" Keyboard="Text"></Entry>
        </Frame>

        <Button x:Name="signInButton" WidthRequest="80" HeightRequest="40" Text="Sign In" Clicked="SignInButton_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>